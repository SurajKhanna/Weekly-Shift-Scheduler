# SPA fallback for Vite-built app on Apache (cPanel)
# Serve existing files normally, otherwise rewrite to index.html
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If the request is for a real file or directory, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, serve index.html (SPA entry)
  RewriteRule ^ index.html [L]
</IfModule>
